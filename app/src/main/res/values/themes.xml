<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FavDish" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="1">?attr/colorPrimary</item>
    </style>

    <style name="Theme.FavDish.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverlayThemeLime" parent="Theme.FavDish.NoActionBar">
        <item name="colorPrimary">@color/md_lime_light</item>
        <item name="colorPrimaryVariant">@color/md_lime_dark</item>
    </style>

    <style name="OverlayThemeRed" parent="Theme.FavDish.NoActionBar">
